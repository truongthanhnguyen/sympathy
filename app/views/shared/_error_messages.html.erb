<% if object.errors.any? %>
  <div id="error-explanation">
    <div class="alert alert-danger">
      <%= t "comment.the_form_contains" %> <%= pluralize(object.errors.count, "error") %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
