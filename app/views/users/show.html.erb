<% provide :title, @user.name %>
<aside class="col-md-4">
  <section>
    <h1>
      <%= @user.name %><br>
      <%= @user.email %>
    </h1>
  </section>
  <section class="stats">
    <%= render "shared/stats" %>
  </section>
</aside>
<div class="col-md-8">
  <%= render "follow_form" if user_signed_in? %>
  <% if @user.posts.any? %>
  <h3><%= t "post.post" %>(<%= @user.posts.count %>)</h3>
  <ol class="posts">
  <%= render @posts %>
  </ol>
  <%= will_paginate @posts %>
  <% end %>
</div>
